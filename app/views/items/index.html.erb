<h1>The Items Page</h1>
<div>
    <% @items.each do |item| %>
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <%= image_tag src='question-mark.jpg', class: 'item-img' %>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to item.title, item %></h5>
                        <p class="card-text"><small class="text-muted"><%= item.user.email %></small></p>
                        <p class="card-text"><%= truncate(item.description, :length => 80) %></p>
                    </div>
                </div>
            </div>
        </div>

    <% end %>
</div>