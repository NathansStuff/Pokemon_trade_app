<div class="login-div">

  <!--
  <div class="logo">
    <%= image_tag "logo.png" %>
  </div>
  -->

  <div class="login-title">PokeTrader</div>
  <div class="login-sub-title">Gotta trade 'em all</div>


  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field username">
        <%= f.text_field :login, class:"form-control", autofocus: true, autocomplete: "email", placeholder: 'Enter Username or Email'%>
      </div>

      <div class="field password">
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: 'Enter Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "login-remember" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class: "btn btn-primary btn-block"%>
      </div>

    <% end %>
  </div>

  <div class="links-signin">
    <p>Don't have an account? <%= link_to 'Sign Up', new_user_registration_path, class:"link-overwrite" %></p>
  </div>

  <div class="links-signin">
    <p>Don't remember your password? <%= link_to 'Reset password', edit_user_password_path, class:"link-overwrite" %></p>
  </div>

</div>
