<%= form_for [commentable, Comment.new] do |f| %>
    <div class='comment-main'>
        <div class='comment-user'>
            <p><strong><%= current_user.username ? current_user.username : current_user.email %></strong></p>
            <div class='comment-avatar'>
                <%= profile_avatar %>
            </div>
        </div>
        <div class='comment-body'>
            <%= f.text_area :body, placeholder: "Add a comment", class:'comment-text' %>
            <p></p>
            <%= f.submit class: "btn btn-info btn-block" %>
        </div>
    </div>
<% end %>