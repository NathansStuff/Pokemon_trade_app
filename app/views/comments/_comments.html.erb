<p>Comments</p>
<% commentable.comments.each do |comment| %>
    <div class='comment-main'>
        <div class='comment-user'>
            <p><strong><%= comment.user.username ? comment.user.username : comment.user.email %></strong></p>
            <div class='comment-avatar'>
                <%= users_profile_avatar(comment.user) %>
            </div>

            <br><p>Posted <%= time_ago_in_words(comment.created_at) %></p>
        </div>

        <div class='comment-body'>
            <p><%= comment.body %></p>
        </div>
    </div>
<% end %>